{
  "name": "bitsxlamarato-live",
  "version": "2.0.0",
  "description": "Bitsxlamarato live web pages",
  "landing": "dist/index.html",
  "scripts": {
    "dist": "npm-run-all --parallel dist:*",
    "w": "npm run watch",
    "watch": "npm-run-all --parallel serve dist watch:* watch:*:*",
    "test": "npm-run-all --silent --parallel -c lint:*",
    "predist": "npm run clean",
    "postdist": "cd dist && asset-cache-bust '*.html' # --Commented-- && inline-source *.html && html-minifier *.html",
    "serve": "http-server dist",
    "notify:update": "notify -t 'HackUPC frontend' -m 'Dist updated' -s -open https://localhost:8080/",
    "clean": "rm -Rf dist/*",
    "postclean": "touch dist/.gitkeep",
    "predist:data": "mkdir -p dist/data",
    "predist:styles": "mkdir -p dist/assets/css",
    "predist:scripts": "mkdir -p dist/assets/js",
    "predist:images": "mkdir -p dist/assets/img",
    "predist:lib": "mkdir -p dist/lib",
    "dist:styles": "npm-run-all --parallel scss:* css:*",
    "dist:scripts": "babel src/scripts -d dist/assets/js --source-maps true",
    "dist:images": "npm-run-all images:copy images:minify",
    "images:copy": "cp -r src/images/* dist/assets/img",
    "images:minify": "# --Commented-- Help, nothing works: imagemin-cli does not keep folders, node-compress-image-cli does not detect compress command, imageoptim-cli is only for mac. Workarround: use github image bot",
    "dist:data": "cp -a src/data/. dist/data",
    "dist:html": "cp src/*.html dist",
    "dist:lib": "npm-run-all --parallel lib:*",
    "lib:folder": "cp -a src/lib/. dist/lib",
    "lib:lax.js": "cp node_modules/lax.js/lib/lax.min.js dist/lib",
    "scss:live": "node-sass --output-style compressed src/styles/live.scss dist/assets/css/live.min.css",
    "css:cookies": "postcss -u postcss-preset-env autoprefixer cssnano -o dist/assets/css/cookies.min.css src/styles/cookies.css",
    "watch:scripts": "onchange \"src/scripts\" -- npm-run-all dist:scripts notify:update",
    "watch:styles:cookies": "onchange \"src/styles/cookies.css\" -- npm-run-all css:cookies notify:update",
    "watch:styles:live": "onchange \"src/styles/live\" \"src/styles/live.scss\" -- npm-run-all scss:live notify:update",
    "watch:styles:shared": "onchange \"src/styles/shared\" -- npm-run-all dist:styles notify:update",
    "watch:styles:data": "onchange \"src/data\" -- npm-run-all dist:data notify:update",
    "watch:images": "onchange \"src/images\" -- npm-run-all dist:images notify:update",
    "watch:html": "onchange \"src/*.html\" -- npm-run-all dist:html notify:update",
    "watch:lib": "onchange \"src/lib\" -- npm-run-all dist:lib notify:update",
    "lint:html": "htmlhint src/**/*.html",
    "lint:js": "eslint src/**/*.js",
    "lint:styles": "stylelint \"src/**/*.{css,scss}\" \"!**/lib/**\"",
    "autofix": "stylelint \"src/**/*.{css,scss}\" \"!**/lib/**\" --fix"
  },
  "author": "HackUPC Dev Team",
  "license": "MIT",
  "dependencies": {
    "asset-cache-bust": "^2.2.0",
    "autoprefixer": "^9.7.1",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "inline-source-cli": "^1.2.0",
    "lax.js": "^1.2.5",
    "node-notifier-cli": "1.1.2",
    "node-sass": "^4.13.0",
    "npm-run-all": "4.1.5",
    "onchange": "3.2.1",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-normalize": "^8.0.1",
    "postcss-preset-env": "^6.7.0",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "babel-eslint": "^10.0.3",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "htmlhint": "^0.11.0",
    "http-server": "^0.11.1",
    "standard": "^12.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0"
  }
}
